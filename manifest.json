{
  "manifest_version": 3,
  "name": "Browser Lock",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage", "tabs", "history"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browser Lock",
    "icons": {
      "16": "lock.png",
      "32": "lock1.png",
      "96": "lock2.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://www.google.com/*", "https://*.google.com/*"]
}
