{
  "manifest_version": 3,
  "name": "Lock Chrome Timer",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "lock.png",
      "48": "lock.png",
      "128": "lock.png"
    }
  },
  "icons": {
    "16": "lock.png",
    "48": "lock.png",
    "128": "lock.png"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://*.baskethunt.com/*", "https://*.google.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}
