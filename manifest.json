{
  "manifest_version": 3,
  "name": "Browser Lock",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browser Lock",
    "icons": {
      "16": "lock1.png",
      "48": "lock2.png",
      "128": "lock3.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
